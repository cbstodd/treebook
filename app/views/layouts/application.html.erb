<!DOCTYPE html>
<html>
<head>
  <title>Treebook</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="container">
    <%= render 'layouts/header' %>

    <% flash.each do |type, message| %>
      <div class="alert <%= flash_class type %>">
        <%= message %>
      </div>

    <% end %>
        
    <%= yield %>
  </div>
</body>
</html>
